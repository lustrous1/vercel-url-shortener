{
    "version": 2,
    "builds": [
      {
        "src": "api/**/*.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      { "src": "/", "dest": "/public/index.html" },
      { "src": "/api/shorten", "dest": "/api/shorten.js" },
      { "src": "/:shortCode", "dest": "/api/[shortCode].js" },
      { "src": "/(.*)", "dest": "/public/$1" }
    ]
  }
